{
  "name": "help-editor",
  "version": "1.4.0",
  "description": "Редактор справочной документации WebHelp",
  "main": "server/index.js",
  "bin": {
    "help-editor": "./cli.js"
  },
  "scripts": {
    "start": "node cli.js",
    "start:electron": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "download-tinymce": "node scripts/download-tinymce.js",
    "postinstall": "node scripts/download-tinymce.js"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "open": "^8.4.2"
  },
  "devDependencies": {
    "electron": "^27.3.0",
    "electron-builder": "^24.13.3"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "cli.js",
    "server/**/*",
    "src/**/*",
    "assets/**/*"
  ],
  "build": {
    "appId": "com.helpeditor.app",
    "productName": "Help Editor",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "server/**/*",
      "src/**/*",
      "assets/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icons/icon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "assets/icons/icon.icns"
    },
    "portable": {
      "artifactName": "HelpEditor-${version}-portable.exe"
    }
  }
}
